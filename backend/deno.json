{
  "name": "@corespeed/devscout",
  "version": "0.1.0",
  "exports": "./src/main.ts",

  "tasks": {
    "start": "deno run --allow-all src/main.ts",
    "dev": "deno run --allow-all --watch src/main.ts",
    "analyze": "deno run --allow-all src/main.ts analyze"
  },

  "imports": {
    "@corespeed/zypher": "jsr:@corespeed/zypher@^0.5.1",
    "rxjs-for-await": "npm:rxjs-for-await@^1.0.0",

    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.8",
    "@std/fmt": "jsr:@std/fmt@^1.0.3",

    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",

    "dotenv": "jsr:@std/dotenv@^0.225.0"
  },

  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["deno.window", "deno.ns", "deno.unstable"]
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
